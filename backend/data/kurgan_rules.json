  "description": "KURGAN VDK Simulator Rules - Inspector Questions & Document Checklist",
  "rules": [
    {
      "id": "K-09",
      "name": "Yuksek Kasa Bakiyesi",
      "category": "VARLIK_ANALIZI",
      "severity": "high",
      "description": "Kasa hesabinin aktif toplamina oraninin sektor ortalamasini asmasi",
      "calculation": {
        "formula": "(account_100 / total_assets) * 100",
        "threshold_type": "percentage",
        "default_threshold": 5.0,
        "comparison": "greater_than"
      },
      "accounts": ["100"],
      "inspector_questions": [
        "Bu kadar yuksek nakit bakiyesinin kaynagi nedir?",
        "Neden bu tutar bankaya yatirilmadi?",
        "Kasa sayimi yapildi mi? Tutanak var mi?",
        "Buyuk nakit cikislarini belgelendirebilir misiniz?",
        "Donem sonu kasa sayim tutanaginizi gosterir misiniz?"
      ],
      "required_documents": [
        {
          "id": "DOC-K09-1",
          "name": "Kasa sayim tutanagi",
          "description": "Donem sonu kasa sayim tutanagi (imzali, tarihli)",
          "priority": "critical"
        },
        {
          "id": "DOC-K09-2",
          "name": "Gunluk kasa defteri",
          "description": "Donem ici gunluk kasa hareketleri",
          "priority": "high"
        },
        {
          "id": "DOC-K09-3",
          "name": "Buyuk nakit islem aciklamalari",
          "description": "10.000 TL uzeri nakit islemlerin aciklamasi ve belgeleri",
          "priority": "medium"
        },
        {
          "id": "DOC-K09-4",
          "name": "Kasa tahsilat makbuzlari",
          "description": "Yuksek tutarli kasa tahsilatlarinin makbuzlari",
          "priority": "medium"
        }
      ],
      "legal_references": [
        "VUK Md. 30/4 - Re'sen takdir",
        "GVK Md. 40 - Indirilecek giderler",
        "KVK Md. 13 - Transfer fiyatlandirmasi"
      ],
      "sector_thresholds": {
        "Perakende Ticaret": 8.0,
        "Toptan Ticaret": 5.0,
        "Insaat": 3.0,
        "Bilisim": 2.0,
        "Tarim": 6.0,
        "Gida Imalat": 4.0,
        "Tekstil": 4.0,
        "Metal Imalat": 3.0,
        "default": 5.0
      }
    },
    {
